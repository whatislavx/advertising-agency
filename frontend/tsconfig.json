{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "outDir": "./public/js",
    "rootDir": "./src/scripts",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/scripts/**/*"
  ]
}
