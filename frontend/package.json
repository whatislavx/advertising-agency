{
  "name": "advertising-agency-frontend",
  "version": "1.0.0",
  "description": "Frontend for Advertising Agency",
  "scripts": {
    "build:css": "sass src/styles:public/css --no-source-map",
    "watch:css": "sass --watch src/styles:public/css",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "build": "npm run build:css && npm run build:ts",
    "start": "concurrently \"npm run watch:css\" \"npm run watch:ts\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "sass": "^1.71.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.24"
  }
}
